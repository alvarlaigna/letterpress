        "required": true,
        "meta": {
        }
      },
      "created_at": {
        "name": "Created at",
        "unique": true,
        "type": "date",
        "required": true
      },
      "updated_at": {
        "name": "Last modified",
        "unique": true,
        "type": "date",
        "required": true
      },
      "published_on": {
        "name": "Publication Date",
        "unique": true,
        "type": "date"
      },
      "subjects": {
        "type": ["/type/attribute"],
        "name": "Subjects",
        "unique": false,
        "default": [],
        "meta": {
          "facet": true
        }
      },
      "entities": {
        "type": ["/type/attribute"],
        "name": "Entities mentioned",
        "unique": false,
        "default": [],
        "meta": {
          "facet": true
        }
      }
    }
  },
